
<p id="notice"><%= notice %></p>

<%= render "top" %>

<h1> <%= "#{t('messages.listing')}  #{@v_count}" %></h1>

<table>
  <thead>
    <tr>
      <th><%= @contacts.human_attribute_name("name") %></th>
      <th><%= @contacts.human_attribute_name("email") %></th>
      <th><%= @contacts.human_attribute_name("kind") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.kind.description %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

